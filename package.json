{
  "name": "playwright-testing-project",
  "version": "1.0.0",
  "description": "A project for web and API testing using Playwright with Allure reporting.",
  "scripts": {
  "test": "playwright test",
  "test:ci": "playwright test --reporter=line",
  "test:report": "allure generate allure-results --clean && allure open",
  "test:full": "npx playwright install --with-deps && npm run test"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^14.0.0",
    "allure-playwright": "^2.0.0",
    "playwright": "^1.40.0",
    "typescript": "^4.0.0"
  },
  "keywords": [],
