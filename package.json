{
  "name": "playwright-testing-project",
  "version": "1.0.0",
  "description": "A project for web and API testing using Playwright with Allure reporting.",
  "scripts": {
    "test": "playwright test",
    "test:ci": "playwright test --reporter=line",
    "test:report": "allure generate allure-results --clean && allure open",
    "test:full": "npx playwright install --with-deps && npm run test",
    "db:up": "scripts/db-up.sh",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f postgres",
    "db:wait": "sh -c 'for i in $(seq 1 60); do docker compose exec -T postgres pg_isready -U task_user -d task_storage && exit 0; sleep 1; done; echo timeout; exit 1'",
    "test:with-db": "npm run db:up && npm run test",
    "prepare": "husky install",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts,.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^14.0.0",
    "allure-playwright": "^2.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.3",
    "playwright": "^1.40.0",
    "typescript": "^4.0.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "allure": "^0.0.0",
    "cors": "^2.8.5",
    "express": "^4.21.2"
  },
  "lint-staged": {
    "*.{ts,js,json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
